g.size(0, tstop, -130, 50)


proc rerun() {
	gmax_IH_params = GIH
	gkd_kd_new = GKD
	tau_a_kd_new = TAUA
	tau_b_kd_new = TAUB
for i = 0, nStim-1 {
	soma stim[i] = new IClamp(0.5)
	stim[i].amp = current //THE APPLIED CURRENT SHOULD BE MULTIPLIED WITH THE SURFACE???!!!!!
	stim[i].dur = 3000
	stim[i].del = 500
}

	color = color + 1
	g.addvar("soma.v(0.5)", color, 0)
	g.exec_menu("Keep Lines")
	graphList[0].append(g)
	run()
}


